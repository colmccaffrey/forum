<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Forum | Topics</title>
	<link rel="stylesheet" href="/style.css">
</head>
<body>
	<div id="wrapper">
	<header>
		<h1>Topics in Forum</h1>
	</header>
	<div id="main">
	<ul>
	<%Object.keys(topics).forEach(function(key){ %>
		<li>
			<a href='/forum/topics/<%=topics[key].title%>'><h2><%=topics[key].title%></h2></a>
			<em>created by <%=topics[key].user_id%></em>
			<h2> Votes:<%=topics[key].votes%> </h2>
			<form action='/forum/topics/<%=topics[key].id%>?_method=PUT' method="POST">
				<input class="hidden" name="user_id" value="<%=topics[key].user_id%>">
				<input class="hidden" name="id" value="<%=topics[key].id%>">
			<button id = "vote">like</button>
			</form>
		</li>
		<%})%>
	</ul>
</div>
<a name="anchor"></a>
<footer id="comment">
	<form action='/forum/topics' method='POST'>
			<input type = "text" name="title" placeholder="topic title here">
			<input type = "text" name="name" placeholder="username">
			<button>Add</button>
		</form>
</footer>
</div>
	<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
	<script src="/main.js"></script>
</body>
</html>